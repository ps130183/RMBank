<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.km.rmbank.module.personal.userinfo.UserInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_protrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BackGauge">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/view_space_8"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_portrait_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_right_black_36dp"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/iv_protrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_perm_identity_black_24dp"
            android:layout_toLeftOf="@id/iv_portrait_left"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BackGauge">
        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/view_space_8"
            />

        <ImageView
            android:id="@+id/iv_nickname_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_right_black_36dp"
            android:layout_alignParentRight="true"
            />

        <EditText
            android:id="@+id/et_user_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我是老好人001"
            android:layout_toLeftOf="@+id/iv_nickname_left"
            android:layout_toRightOf="@+id/tv_user_nick_name"
            android:layout_centerVertical="true"
            android:background="@color/color_white"
            android:gravity="right"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BackGauge">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/view_space_8"
            />

        <ImageView
            android:id="@+id/iv_birthday_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_right_black_36dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1989-12-21"
            android:layout_toLeftOf="@id/iv_birthday_left"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2"/>

</LinearLayout>
