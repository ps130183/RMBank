<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.km.rmbank.module.club.recent.ActionRecentInfoActivity">

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_action_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动内容"
            android:gravity="center"
            android:padding="@dimen/view_space_16"
            />

        <View
            android:layout_width="@dimen/divider_line_1"
            android:layout_height="match_parent"
            android:background="@color/color_divider2"
            android:layout_marginTop="@dimen/view_space_8"
            android:layout_marginBottom="@dimen/view_space_8"/>

        <TextView
            android:id="@+id/tv_action_member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="参加人员"
            android:gravity="center"
            android:padding="@dimen/view_space_16"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2"
        android:layout_below="@+id/ll_action"
        />

    <FrameLayout
        android:id="@+id/fl_action_recent_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/divider_line_1"
        android:layout_below="@+id/ll_action">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_action_recent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btn_apply"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:paddingTop="@dimen/view_space_16"
        android:paddingBottom="@dimen/view_space_16"
        android:background="@drawable/shape_action_recent_info_apply">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/view_space_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的姓名："
                android:textColor="@color/color_block"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/view_space_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textColor="@color/color_block"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="11"
                android:lines="1"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="报名"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:layout_marginBottom="@dimen/view_space_16"
        android:background="@drawable/shape_btn_action_recent_join"
        />

</RelativeLayout>
