<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.club.ClubInfoActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiper_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_club_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/ll_select_club_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_1"
            android:background="@color/color_divider2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_club_introduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/view_space_16"
                android:text="图文介绍"
                android:textColor="@color/color_pink" />

            <View
                android:layout_width="@dimen/divider_line_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/view_space_4"
                android:layout_marginTop="@dimen/view_space_4"
                android:background="@color/color_divider2" />

            <TextView
                android:id="@+id/tv_action_recent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/view_space_16"
                android:text="近期活动"
                android:textColor="@color/color_block" />

            <View
                android:layout_width="@dimen/divider_line_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/view_space_4"
                android:layout_marginTop="@dimen/view_space_4"
                android:background="@color/color_divider2" />

            <TextView
                android:id="@+id/tv_action_past"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/view_space_16"
                android:text="往期活动"
                android:textColor="@color/color_block" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_1"
            android:background="@color/color_divider2" />
    </LinearLayout>

</RelativeLayout>
