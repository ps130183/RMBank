<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_divider1"
    tools:context="com.km.rmbank.module.club.recent.ActionApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_space_8"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:layout_marginTop="@dimen/view_space_32"
        android:layout_marginBottom="@dimen/view_space_8"
        android:gravity="center_vertical"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓  名"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/view_space_8"
            android:layout_marginRight="@dimen/view_space_8"
            android:layout_marginTop="@dimen/view_space_4"
            android:layout_marginBottom="@dimen/view_space_4"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_space_8"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:layout_marginTop="@dimen/view_space_8"
        android:gravity="center_vertical"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/view_space_8"
            android:layout_marginRight="@dimen/view_space_8"
            android:layout_marginTop="@dimen/view_space_4"
            android:layout_marginBottom="@dimen/view_space_4"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_64"
        android:layout_marginRight="@dimen/view_space_64"
        android:layout_marginTop="@dimen/view_space_32"
        android:background="@color/color_blue4"
        android:text="立即报名"
        android:textColor="@color/color_white"
        android:textStyle="bold"/>


</LinearLayout>
