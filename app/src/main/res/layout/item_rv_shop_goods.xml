<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/view_space_8">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/view_space_8"
        android:layout_marginRight="@dimen/view_space_8"
        android:scaleType="fitXY"
        android:src="@mipmap/timg" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_space_8"
        android:text="深海海参 产自大西洋"
        android:textSize="@dimen/text_size_16"
        android:layout_toRightOf="@+id/iv_goods"/>

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_space_8"
        android:text="¥1280.00"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_size_18"
        android:layout_toRightOf="@+id/iv_goods"
        android:layout_above="@+id/tv_sub_title"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_8"
        android:text="会员专享 全场9折"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_size_16"
        android:layout_toRightOf="@+id/iv_goods"
        android:layout_alignBottom="@+id/iv_goods"
        android:layout_marginBottom="@dimen/view_space_8"/>
</RelativeLayout>