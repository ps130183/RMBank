<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_user_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.personal.userinfo.editcart.EditUserCompanyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_16"
        android:background="@color/color_white">
        <EditText
            android:id="@+id/et_company"
            style="@style/Personal.User.EditCard.et_focuse"
            android:hint="请填写公司名称"
            android:lines="3"
            android:maxLength="20"
            android:gravity="top"
            />
        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cancel_grey600_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/et_company"
            android:layout_marginBottom="@dimen/view_space_8"
            android:layout_marginRight="@dimen/view_space_16"
            />

        <TextView
            android:id="@+id/tv_char_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/20"
            android:textSize="@dimen/text_size_14"
            android:layout_toLeftOf="@id/iv_clear"
            android:layout_alignBottom="@id/iv_clear"
            android:layout_marginRight="@dimen/view_space_8"
            />

    </RelativeLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请注意字数限制最多25个字汉字或40个字符。"
        android:textSize="@dimen/text_size_12"
        android:gravity="left"
        android:layout_marginTop="@dimen/view_space_4"
        android:paddingLeft="@dimen/view_space_16"
        />


</LinearLayout>
