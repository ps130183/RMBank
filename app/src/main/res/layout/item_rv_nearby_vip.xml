<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/view_space_8">

    <ImageView
        android:id="@+id/iv_protrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/timg"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/view_space_16"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="@dimen/text_size_16"
        android:layout_toRightOf="@id/iv_protrait"
        android:layout_marginTop="@dimen/view_space_8"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15631707132"
        android:layout_toRightOf="@id/iv_protrait"
        android:layout_below="@id/tv_nickname"
        android:layout_marginTop="@dimen/view_space_16"
        />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2Km"
        android:layout_centerVertical="true"
        />
</RelativeLayout>