<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.register.RegisterPhoneActivity">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写您的手机号"
        android:padding="@dimen/view_space_16"
        android:background="@color/color_white"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/view_space_16"
        android:inputType="phone"
        android:maxLength="11"
        />

    <Button
        android:id="@+id/btn_get_captcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:text="获取验证码"
        />

</LinearLayout>
