<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.personal.userinfo.EditUserCardActivity">
    <RelativeLayout
        android:id="@+id/activity_edit_user_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/view_space_16"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                style="@style/Personal.User.EditCard.pll"
                >
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="姓        名"
                        />

                    <EditText
                        android:id="@+id/et_name"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入您的真实姓名"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="手        机"
                        />

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入您的手机号码"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="公        司"
                        />

                    <EditText
                        android:id="@+id/et_company"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入您的公司名称"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="职        位"
                        />

                    <EditText
                        android:id="@+id/et_job"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入您所在公司的职位"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/Personal.User.EditCard.pll"
                >
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="企业介绍"
                        />

                    <EditText
                        android:id="@+id/et_company_intro"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请用一句话概括您公司涉及的业务"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="提供资源"
                        />

                    <EditText
                        android:id="@+id/et_provider_resource"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入或选择"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="需求资源"
                        />

                    <EditText
                        android:id="@+id/et_need_resource"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入或选择"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/Personal.User.EditCard.pll"
                >
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="所在地"
                        />

                    <EditText
                        android:id="@+id/et_location"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入所在地"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="详细地址"
                        />

                    <EditText
                        android:id="@+id/et_address"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入详细地址"
                        />
                </LinearLayout>
                <include layout="@layout/divider_height_1"/>
                <LinearLayout
                    style="@style/Personal.User.EditCard.sll"
                    >
                    <TextView
                        style="@style/Personal.User.EditCard.tv"
                        android:text="邮箱地址"
                        />

                    <EditText
                        android:id="@+id/et_email"
                        style="@style/Personal.User.EditCard.et_nofocuse"
                        android:hint="请输入邮箱地址"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_create_code"
                style="@style/Button"
                android:text="生成名片"
                />
        </LinearLayout>



        <View
            android:id="@+id/vMasker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#e0000000"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
