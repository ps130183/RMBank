<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/view_space_8">

    <TextView
        android:id="@+id/tv_action_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动标题"
        android:textColor="@color/color_block"
        android:gravity="center"
        android:padding="@dimen/view_space_8"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_action_img1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/timg"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="@dimen/view_space_8"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/iv_action_img2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/timg"
            android:scaleType="fitXY"
            />

    </LinearLayout>

</LinearLayout>