<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_space_16"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_protrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/timg"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/view_space_16"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_block"
            android:layout_toLeftOf="@+id/tv_status"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约中"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥5000"
            android:textColor="@color/color_red"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tv_create_time"
            />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-09 08:22"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>