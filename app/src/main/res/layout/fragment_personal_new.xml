<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.personal.PersonalNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/status_height"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/color_white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:id="@+id/iv_shop_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/view_space_16"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_shopping_cart_white_48"
                    />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <include layout="@layout/recyclerview"/>

</LinearLayout>
