<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.km.rmbank.module.personal.forum.ReleaseForumActivity">


    <EditText
        android:id="@+id/et_rule_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:hint="输入内容"
        android:textSize="14sp"
        android:gravity="left|top"
        android:layout_marginLeft="@dimen/view_space_16"
        android:layout_marginRight="@dimen/view_space_16"
        android:background="@color/color_white"
        android:padding="@dimen/view_space_8"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_forum_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
