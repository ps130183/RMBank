<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/view_space_16"
    android:paddingRight="@dimen/view_space_16"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_protrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/timg"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/view_space_16"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兰林王"
            android:layout_margin="@dimen/view_space_8"
            />

        <TextView
            android:id="@+id/tv_member_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15678902345"
            android:layout_margin="@dimen/view_space_8"
            />

    </LinearLayout>

</LinearLayout>