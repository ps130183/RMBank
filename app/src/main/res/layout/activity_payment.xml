<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.personal.shopcart.payment.PaymentActivity">

    <RelativeLayout
        style="@style/BackGauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingRight="@dimen/view_space_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="52.40元"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2" />

    <RelativeLayout
        android:id="@+id/ll_pay_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_space_8"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/view_space_8"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_8">

        <TextView
            android:id="@+id/tv_pay_type_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_space_4"
            android:text="余额支付"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_balance_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pay_type_balance"
            android:text="快捷又安全" />


        <CheckBox
            android:id="@+id/cb_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_space_8"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/view_space_8"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_8">

        <TextView
            android:id="@+id/tv_pay_type_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_space_4"
            android:text="微信"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_weichat_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pay_type_weichat"
            android:text="快捷又安全" />


        <CheckBox
            android:id="@+id/cb_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_space_8"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/view_space_8"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_8">

        <TextView
            android:id="@+id/tv_pay_type_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_space_4"
            android:text="余额支付"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_alipay_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pay_type_alipay"
            android:text="快捷又安全" />


        <CheckBox
            android:id="@+id/cb_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/view_space_8"
        android:paddingTop="@dimen/view_space_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_space_8"
            android:layout_marginLeft="@dimen/view_space_16"
            android:text="其他支付方式"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_1"
            android:background="@color/color_divider2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:paddingBottom="@dimen/view_space_8"
            android:paddingLeft="@dimen/view_space_16"
            android:paddingRight="@dimen/view_space_16"
            android:paddingTop="@dimen/view_space_8">

            <TextView
                android:id="@+id/tv_pay_type_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_4"
                android:text="银行卡支付"
                android:textColor="@color/color_block"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_bank_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pay_type_bank"
                android:text="快捷又安全" />


            <CheckBox
                android:id="@+id/cb_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_1"
            android:background="@color/color_divider2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_intergal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_8"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/view_space_8"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择可用积分：50" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:layout_marginTop="@dimen/view_space_16"
        android:background="@color/color_red"
        android:text="去完成"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>
