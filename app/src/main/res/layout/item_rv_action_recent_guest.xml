<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/view_space_8"
    android:paddingRight="@dimen/view_space_16"
    android:background="@color/color_white"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_guest_protrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/view_space_16"
        />

    <TextView
        android:id="@+id/tv_guest_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_block"/>

</LinearLayout>