<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.home.Home3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/status_height"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ToolbarPopupTheme"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="玩转地球"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_white"
                />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_add_white_48px"
                android:visibility="visible"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/view_space_16"
                />

        </android.support.v7.widget.Toolbar>

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/common_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="@dimen/view_space_8"
            app:tl_iconVisible="false"
            app:tl_indicator_corner_radius="1.5dp"
            app:tl_indicator_height="0dp"
            app:tl_indicator_width="10dp"
            app:tl_textSelectColor="#33CCFF"
            app:tl_textUnselectColor="@color/color_stl_unselected"
            app:tl_textsize="14sp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
