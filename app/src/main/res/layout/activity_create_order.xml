<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.personal.shopcart.createorder.CreateOrderActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/view_space_16"
        android:layout_marginBottom="@dimen/view_space_16"
        style="@style/BackGauge"
        android:paddingTop="@dimen/view_space_8"
        android:paddingBottom="@dimen/view_space_8"
        >

        <TextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_block"
            />

        <TextView
            android:id="@+id/tv_receiver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="137****3456"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_block"
            android:layout_toRightOf="@id/tv_receiver_name"
            android:layout_marginLeft="@dimen/view_space_16"
            />

        <TextView
            android:id="@+id/tv_receiver_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市昌平区霍营街道过分霍营街道过"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_block"
            android:ellipsize="end"
            android:lines="1"
            android:layout_below="@id/tv_receiver_name"
            android:layout_marginTop="@dimen/view_space_4"
            android:layout_toLeftOf="@+id/iv_other_address"
            android:drawableLeft="@mipmap/ic_place_black_24dp"
            android:gravity="center|left"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:id="@+id/iv_other_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_more_horiz_grey600_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_space_16"
            android:layout_marginLeft="@dimen/view_space_16"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_8"
        android:paddingBottom="@dimen/view_space_8"
        android:layout_marginBottom="@dimen/view_space_4"
        android:layout_above="@+id/rl_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分抵现：50"
            android:layout_centerVertical="true"
            />

        <com.rey.material.widget.Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="false"
            style="@style/Switch_theme"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <include layout="@layout/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:layout_above="@+id/rl_integral"/>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/view_space_16">

        <TextView
            android:id="@+id/tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款：¥ "
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/color_red"
            android:layout_marginLeft="@dimen/view_space_16"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123.00"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_size_18"
            android:layout_toRightOf="@+id/tv_total_title"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_submit_order"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="提交订单"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:background="@color/color_red"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />

    </RelativeLayout>

</RelativeLayout>
