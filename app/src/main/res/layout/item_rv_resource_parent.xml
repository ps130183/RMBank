<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_industry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="制造业"
            android:textColor="@color/color_block"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_16"
            />
        <View
            android:id="@+id/v_checked"
            android:layout_width="@dimen/divider_line_2"
            android:layout_height="match_parent"
            android:background="@color/color_blue2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/view_space_8"
            android:layout_marginBottom="@dimen/view_space_8"
            />

        <CheckBox
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_space_16"
            />

        <TextView
            android:id="@+id/tv_checked_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选2项"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/checked"
            android:layout_marginRight="@dimen/view_space_16"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider2"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_default_background">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>