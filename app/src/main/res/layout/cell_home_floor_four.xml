<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_floor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_space_16"
            android:paddingBottom="@dimen/view_space_8"
            android:paddingTop="@dimen/view_space_8"
            android:text="电脑用品"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="8dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/tv_floor_title"
            android:background="#31dcc5" />

        <TextView
            android:id="@+id/tv_floor_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_space_16"
            android:paddingBottom="@dimen/view_space_8"
            android:paddingTop="@dimen/view_space_8"
            android:text="配置与性价比并存 靠谱"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_goods1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/view_space_16">

            <TextView
                android:id="@+id/tv_goods_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一体机"
                android:textColor="@color/color_block"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_goods_sub_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="就他吗一个主机"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_goods_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_computer1" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_line_1"
            android:layout_height="match_parent"
            android:background="@color/color_divider1"/>

        <LinearLayout
            android:id="@+id/ll_goods2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/view_space_16">

            <TextView
                android:id="@+id/tv_goods_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="早教机"
                android:textColor="@color/color_block"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_goods_sub_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="妈妈的好帮手"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_goods_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_computer2" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_goods3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/view_space_16">

            <TextView
                android:id="@+id/tv_goods_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="笔记本"
                android:textColor="@color/color_block"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_goods_sub_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="华硕笔记本"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_goods_image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_computer3" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_line_1"
            android:layout_height="match_parent"
            android:background="@color/color_divider1"/>

        <LinearLayout
            android:id="@+id/ll_goods4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/view_space_16">

            <TextView
                android:id="@+id/tv_goods_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="特色笔记本"
                android:textColor="@color/color_block"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_goods_sub_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="特别的颜色笔记本 赞"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_goods_image4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_computer4" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>