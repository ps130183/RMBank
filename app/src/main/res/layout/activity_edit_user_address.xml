<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_user_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.personal.userinfo.editcart.EditUserAddressActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_16"
        android:background="@color/color_white">
        <EditText
            android:id="@+id/et_address"
            style="@style/Personal.User.EditCard.et_focuse"
            android:hint="请填写详细地址"
            android:lines="3"
            android:maxLength="50"
            android:gravity="top"
            />
        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cancel_grey600_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/et_address"
            android:layout_marginBottom="@dimen/view_space_8"
            android:layout_marginRight="@dimen/view_space_16"
            />

        <TextView
            android:id="@+id/tv_char_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/50"
            android:textSize="@dimen/text_size_14"
            android:layout_toLeftOf="@id/iv_clear"
            android:layout_alignBottom="@id/iv_clear"
            android:layout_marginRight="@dimen/view_space_8"
            />

    </RelativeLayout>
</LinearLayout>
