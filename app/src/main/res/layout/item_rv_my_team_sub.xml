<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        >

        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是昵称"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_block"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:layout_marginLeft="@dimen/view_space_8"
            />

        <ImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/timg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_8"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_right_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_space_8"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_referrer_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="由15631707132邀请"
        android:textSize="@dimen/text_size_12"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/view_space_4"
        android:gravity="right"
        android:background="@color/color_divider1"
        />
</LinearLayout>
