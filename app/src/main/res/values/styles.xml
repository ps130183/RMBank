<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/color_red</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButtonStyle</item>
    </style>

    <style name="HomeBottomRadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <!--  Toolbar style 配置 Start -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:gravity">center</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

        <!--这个也正确,用这个吧-->
        <item name="colorControlNormal">@color/color_white</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <!--弹出菜单与标题栏的垂直间距-->
        <item name="android:dropDownVerticalOffset">10dip</item>
    </style>

    <style name="OverFlowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_add_white_48px</item>
    </style>

    <!--  Toolbar style 配置 End -->
    <style name="Switch_theme" parent="Material.Widget.Switch">
        <item name="sw_trackSize">19dp</item>
        <item name="sw_trackCap">round</item>
        <item name="sw_thumbRadius">10dp</item>
        <item name="sw_thumbElevation">2dp</item>
    </style>


    <!-- 我是分割线        以下是app自用  -->
    <style name="Personal"/>
    <style name="Personal.UserInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_margin">@dimen/view_space_8</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_btn_bg_red</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/view_space_16</item>
    </style>

    <style name="Button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_btn_bg_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/view_space_16</item>
    </style>

    <style name="Personal.function_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/view_space_8</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Personal.function_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/view_space_8</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_marginBottom">@dimen/view_space_8</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Goods"/>
    <style name="Goods.BackGauge">
        <item name="android:paddingLeft">@dimen/view_space_16</item>
        <item name="android:paddingRight">@dimen/view_space_16</item>
        <item name="android:paddingTop">@dimen/view_space_4</item>
        <item name="android:paddingBottom">@dimen/view_space_4</item>
    </style>

    <style name="BackGauge">
        <item name="android:paddingLeft">@dimen/view_space_16</item>
        <item name="android:paddingTop">@dimen/view_space_8</item>
        <item name="android:paddingBottom">@dimen/view_space_8</item>
    </style>
    <style name="SingleLineEditText">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingTop">@dimen/view_space_8</item>
        <item name="android:paddingBottom">@dimen/view_space_8</item>
    </style>

    <style name="Personal.User"/>
    <style name="Personal.User.EditCard"/>
    <style name="Personal.User.EditCard.ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Personal.User.EditCard.pll" parent="Personal.User.EditCard.ll">
        <item name="android:layout_marginTop">@dimen/view_space_8</item>
        <item name="android:paddingLeft">@dimen/view_space_16</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/view_space_8</item>
    </style>
    <style name="Personal.User.EditCard.sll" parent="Personal.User.EditCard.ll">
        <item name="android:paddingTop">@dimen/view_space_8</item>
        <item name="android:paddingBottom">@dimen/view_space_8</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Personal.User.EditCard.tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginRight">@dimen/view_space_16</item>
    </style>
    <style name="Personal.User.EditCard.et_nofocuse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Personal.User.EditCard.et_focuse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:padding">@dimen/view_space_16</item>
    </style>

    <style name="Personal.User.EditCard.et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="Personal.User.Setting"/>
    <style name="Personal.User.Setting.tv">
        <item name="android:paddingTop">@dimen/view_space_16</item>
        <item name="android:paddingBottom">@dimen/view_space_16</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Personal.User.Order"/>
    <style name="Personal.User.Order.Button">
        <item name="android:textColor">@drawable/selector_order_button_textcolor</item>
        <item name="android:background">@drawable/selector_order_button</item>
    </style>
</resources>
